{% extends 'layouts/app.twig' %}

{% block content %}

	<div class="row">
		<div class="col-md-6 offset-md-3">
			<div class="card card-default">
				<div class="card-header">Sign up</div>
				<div class="card-body">

					<form action="{{ path_for('auth.signup') }}" method="post" autocomplete="off">
						{{ csrf.field | raw }}

						<div class="form-group">
							<label for="email">Email</label>
							<input type="email" name="email" id="email" placeholder="you@domain" class="form-control{{ errors.email ? ' is-invalid' : '' }}" value="{{ old.email }}">

							{% if errors.email %}

								<div class="invalid-feedback">
									{{ errors.email | first }}
								</div>

							{% endif %}

						</div>
						<div class="form-group">
							<label for="name">Name</label>
							<input type="text" name="name" id="name" class="form-control{{ errors.name ? ' is-invalid' : '' }}" value="{{ old.name }}">

							{% if errors.name %}

								<div class="invalid-feedback">
									{{ errors.name | first }}
								</div>

							{% endif %}

						</div>
						<div class="form-group">
							<label for="password">Password</label>
							<input type="password" name="password" id="password" class="form-control{{ errors.password ? ' is-invalid' : '' }}" value="{{ old.password }}">

							{% if errors.password %}

								<div class="invalid-feedback">
									{{ errors.password | first }}
								</div>

							{% endif %}

						</div>


						<button type="submit" class="btn btn-primary">Sign up</button>
					</form>

				</div>
			</div>
		</div>
	</div>

{% endblock %}
